    "openai": "^5.7.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "rimraf": "^5.0.5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "files": [
    "dist/*.js",
    "dist/*.d.ts"
  ]
